{
  "name": "nest-graphql-typeorm",
  "version": "0.7.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf tsconfig.tsbuildinfo",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "APP_ROOT_PATH=. nest start --watch",
    "start:prod": "node dist/main",
    "reset": "typeorm schema:drop && npm run migrate:up && npm run seed",
    "migrate:up": "typeorm migration:run",
    "migrate:generate": "npm run build && typeorm migration:generate -d ./migrations ",
    "seed": "ts-node ../../node_modules/typeorm-seeding/dist/cli.js --config ./ormconfig.json seed"
  },
  "dependencies": {
    "@nestjs-query/core": "^0.7.0",
    "@nestjs-query/query-graphql": "^0.7.1",
    "@nestjs-query/query-typeorm": "^0.7.0",
    "@nestjs/common": "^7.0.6",
    "@nestjs/core": "^7.0.6",
    "@nestjs/graphql": "^7.1.3",
    "@nestjs/platform-express": "^7.0.6",
    "@nestjs/typeorm": "^7.0.0",
    "apollo-server-express": "^2.11.0",
    "graphql": "^14.6.0",
    "graphql-tools": "^4.0.7",
    "pg": "^7.18.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "typeorm": "^0.2.24",
    "typeorm-seeding": "^1.3.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.2",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.6",
    "@types/express": "^4.17.3",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.31",
    "@types/supertest": "^2.0.8",
    "jest": "^25.2.3",
    "prettier": "^2.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.8.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
