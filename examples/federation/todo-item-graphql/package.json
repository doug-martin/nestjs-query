{
  "name": "todo-item-graphql",
  "version": "0.13.2",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf tsconfig.tsbuildinfo",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "APP_ROOT_PATH=. nest start --watch",
    "start:prod": "node dist/main",
    "reset": "npm run build && typeorm schema:drop -c todo-item-db && npm run schema:sync && npm run seed",
    "schema:sync": "typeorm schema:sync -c todo-item-db",
    "seed": "node ../../../node_modules/typeorm-seeding/dist/cli.js -n ./ormconfig.json -c todo-item-db seed"
  },
  "dependencies": {
    "@apollo/federation": "0.16.8",
    "@nestjs-query/core": "0.13.0",
    "@nestjs-query/query-graphql": "0.13.2",
    "@nestjs-query/query-typeorm": "0.13.0",
    "@nestjs/common": "7.2.0",
    "@nestjs/core": "7.2.0",
    "@nestjs/graphql": "7.4.1",
    "@nestjs/platform-express": "7.2.0",
    "@nestjs/typeorm": "7.1.0",
    "apollo-server-express": "2.15.0",
    "class-validator": "0.12.2",
    "graphql": "15.1.0",
    "graphql-tools": "6.0.10",
    "pg": "8.2.1",
    "rimraf": "3.0.2",
    "rxjs": "6.5.5",
    "typeorm": "0.2.25",
    "typeorm-seeding": "1.6.1"
  },
  "devDependencies": {
    "@nestjs/cli": "7.4.0",
    "@nestjs/schematics": "7.0.1",
    "@nestjs/testing": "7.2.0",
    "@types/express": "4.17.6",
    "@types/jest": "26.0.0",
    "@types/node": "13.13.5",
    "@types/supertest": "2.0.9",
    "jest": "26.0.1",
    "prettier": "2.0.5",
    "supertest": "4.0.2",
    "ts-jest": "26.1.0",
    "ts-loader": "7.0.5",
    "ts-node": "8.10.2",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
